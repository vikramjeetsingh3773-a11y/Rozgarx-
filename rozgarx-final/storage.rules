rules_version = '2';

// ============================================================
// RozgarX AI — Firebase Storage Security Rules
// ============================================================

service firebase.storage {
  match /b/{bucket}/o {

    // ── Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.role == 'admin'
        || request.auth.token.role == 'superadmin';
    }

    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }

    function isValidFileSize(maxMB) {
      return request.resource.size < maxMB * 1024 * 1024;
    }


    // ── Official Job PDFs (read-only for public, admin writes)
    match /pdfs/{jobId}/{fileName} {
      allow read: if true;  // Public — official notifications
      allow write: if isAdmin();
    }


    // ── User Resume Uploads (owner only, PDF only, max 5MB)
    match /resumes/{userId}/{resumeId} {
      allow read: if isSignedIn() && isOwner(userId) || isAdmin();
      allow create: if isSignedIn()
        && isOwner(userId)
        && isPDF()
        && isValidFileSize(5);
      allow update, delete: if isSignedIn() && isOwner(userId);
    }


    // ── Temp Scraper Files (no client access, Cloud Functions only)
    match /temp/{runId}/{fileName} {
      allow read, write: if false;
    }


    // ── Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
